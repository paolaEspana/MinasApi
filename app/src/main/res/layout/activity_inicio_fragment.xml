<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardUseCompatPadding="true"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/logof"
                    android:background="#000000"
                    />
            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/cvVisualizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="2dp"
                        card_view:cardElevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardUseCompatPadding="true"
                        >

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/mapa"
                            android:background="#ffffff"
                            android:scaleType="fitXY"
                            />

                        <TextView
                            android:layout_width="308dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="200dp"
                            android:text="Visualizar Minas"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginTop="22dp"
                            />
                    </android.support.v7.widget.CardView>


                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cvZona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/grafica"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="308dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="200dp"
                        android:text="Zonas con mÃ¡s minas"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cvSituacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/situacion"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="308dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="200dp"
                        android:text="Situacion de minas"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/cvAcercaDe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/acerca"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="308dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="200dp"
                        android:text="Acerca De"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="22dp"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>